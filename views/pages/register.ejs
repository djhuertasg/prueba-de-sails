<h1>Registro de usuarios</h1>
<p>
  <% if(typeof mensaje != 'undefined' && mensaje){ %>
    <p class="msj-form">*
        <% mensaje %>
    </p>
    <% } %>
</p>
<form method="POST" action="/user">
  <div class="form-group">
    <input type="number" name="nombreusuario" placeholder="Documento Identidad" required>
  </div>
  <div class="form-group">
    <input type="email" name="email" placeholder="Correo" required>
  </div>
  <div class="form-group">
    <input type="password" name="password" placeholder="Contraseña" required>
  </div>
  <div class="form-group">
    <input type="string" name="nombres" placeholder="Nombres" required>
  </div>
  <div class="form-group">
    <input type="string" name="apellidos" placeholder="Apellidos" required>
  </div>
  <div class="form-group">
    <input type="number" name="telefono" placeholder="Teléfono" required>
  </div>
  <div class="form-group">
    <input type="number" name="psicometra" placeholder="Psicómetra">
  </div>
  <div class="form-group">
    <input type="number" name="auxiliar" placeholder="Auxiliar Psicómetra">
  </div>
  <div class="form-group">
    <label><input type="radio" value="C" name="rol" checked>Constructor de preguntas</label>
    <label><input type="radio" value="P" name="rol" >Psicómetra</label>
    <label><input type="radio" value="X" name="rol" >Auxiliar psicómetra</label>
    <label><input type="radio" value="A" name="rol" >Administrador</label>
  </div>
  <div class="form-group">
    <label><input type="radio" value="S" name="activo" checked>Activo</label>
    <label><input type="radio" value="N" name="activo" >Inactivo</label>
  </div>
  <button type="submit" class="btn btn-primary">Registrar</button>
</form>